@using System.Net
@model SweetsShop.Models.ViewModels.DetailsVM

<div class="">
    <form method="post">
        <input name="url" value="@Url.Action()" hidden/>
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border: 1px solid #000000;">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @(Model.Product.Price100g)rub</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-2 text-center">
                                <img src="@WC.ImagePath@Model.Product.Image" width="100%" class="rounded"/>
                            </div>
                            <div class="col-12 col-lg-8">

                                <div>
                                    <div class="col-12">
                                        <b class="text-secondary">@Html.Raw(Model.Product.Description)</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 m-0 row">
                    <button type="submit" asp-route-id="@Model.Product.Id" asp-action="RemoveFromCart" onclick="minusCount('count_@Model.Product.Id');saveValue('count_@Model.Product.Id');" style="text-align: end; font-size: 25px; box-shadow: none;" class="minus col-4 btn">
                        <i class="fa-solid fa-circle-minus"></i>
                    </button>
                    <input value="0" disabled class="col-4" id="count_@Model.Product.Id" style="background-color: rgba(0, 0, 0, 0); border: none; font-size: 25px; text-align: center;" type="text"/>
                    <button type="submit" asp-route-id="@Model.Product.Id" asp-action="AddToCart" onclick="plusCount('count_@Model.Product.Id');saveValue('count_@Model.Product.Id');" style="text-align: justify; font-size: 25px; box-shadow: none;" class="plus col-4 btn">
                        <i class="fa-solid fa-circle-plus"></i>
                    </button>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height: 50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistsInCart)
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height: 50px;">Remove from cart</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-info form-control btn-lg" style="height: 50px;">Add to Cart</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        document.getElementById("count_@Model.Product.Id").value = getSavedValue("count_@Model.Product.Id");
        function plusCount(count) {
            var kol = document.getElementById(String(count));
            if (parseInt(kol.value) < 99) kol.value = String(parseInt(getSavedValue(count)) + 1);
        }
        function minusCount(count) {
            var kol = document.getElementById(String(count));
            if (parseInt(kol.value) > 0) kol.value = String(parseInt(getSavedValue(count)) - 1);
        }
        function saveValue(name) {
            var e = document.getElementById(String(name));
            var id = e.id;
            var val = e.value;
            localStorage.setItem(id, val);
        }
        function getSavedValue(v) {
            if (localStorage.getItem(v) === null) {
                return "0";
            }
            var kol = localStorage.getItem(v);
            return localStorage.getItem(v);
        }
    </script>
}
