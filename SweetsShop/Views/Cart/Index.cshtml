@model IEnumerable<Product>

@if(Model.Count() > 0)
{
<form method="post">
    <br />
    <input name="url" value="@Url.Action()" hidden/>
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Корзина
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Продолжить покупки</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-12 col-lg-7">
                                    Детали продукта
                                </div>
                                <div class="col-12 col-lg-2">
                                    Цена за 100g
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @foreach(var obj in Model){
                        <div class="row h-100">
                            <div class="col-4 col-md-2 text-center py-2">
                                <img src="@WC.ImagePath@obj.Image" class="rounded" width="100%" />
                            </div>
                            <div class="col-6 col-lg-5">
                                <h5>@obj.Name</h5>
                                <div style="font-size:11px;">@obj.ShortDescription</div>
                            </div>
                            <div class="col-2">
                                <div class="row">
                                    <button type="button" id="button1_@obj.Id" asp-route-id="@obj.Id" asp-controller="Home" asp-action="RemoveFromCart" onclick="minusCount('count_@obj.Id',this,'button2_@obj.Id',@obj.Price100g);saveValue('count_@obj.Id');" style="text-align: end; font-size: 25px; box-shadow: none;" class="col-4 btn">
                                        <i class="fa-solid fa-circle-minus"></i>
                                    </button>
                                    <input value="0" disabled class="col-4" id="count_@obj.Id" style="background-color: rgba(0, 0, 0, 0); border: none; font-size: 25px; text-align: center;" type="text"/>
                                    <button type="button" id="button2_@obj.Id" asp-route-id="@obj.Id" asp-controller="Home" asp-action="AddToCart" onclick="plusCount('count_@obj.Id',this,'button1_@obj.Id',@obj.Price100g);saveValue('count_@obj.Id');" style="text-align: justify; font-size: 25px; box-shadow: none;" class="col-4 btn">
                                        <i class="fa-solid fa-circle-plus"></i>
                                    </button>
                                    <script>
                                        var Count = document.getElementById("count_@obj.Id");
                                        Count.value = getSavedValue("count_@obj.Id");
                                        function getSavedValue(v) {
                                            if (localStorage.getItem(v) === null) {
                                                return "0";
                                            }
                                            return localStorage.getItem(v);
                                        }
                                    </script>
                                </div>
                            </div>
                            <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                <span style="font-size:17px;"> @obj.Price100g rub</span>/ 100g
                            </div>
                            <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                <a onclick="removeItem('count_@obj.Id')" asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <hr />
                        }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
}
else 
{
    <p>Please add items to cart</p>
}

@section Scripts
{
    <script>
        function plusCount(count, button2, idButton1, cost) {
            var sum = parseInt(getSavedValue("sum"));
            sum += cost;
            localStorage.setItem("sum", sum);
            var kol = document.getElementById(String(count));
            var button1 = document.getElementById(String(idButton1));
            if (parseInt(kol.value) >= 1) {
                button2.type = "button";
                button1.type = "button";
            }
            if (parseInt(kol.value) == 0) {
                button1.type = "submit";
                button2.type = "submit";
            }
            if (parseInt(kol.value) < 99) kol.value = String(parseInt(getSavedValue(count)) + 1);
        }
        function removeItem(count) {
            localStorage.removeItem(count);
        }
        function minusCount(count, button1, idButton2, cost) {
            var sum = parseInt(getSavedValue("sum"));
            if (sum > 0) {
                sum -= cost;
                localStorage.setItem("sum", sum);
            }
            var kol = document.getElementById(String(count));
            var button2 = document.getElementById(String(idButton2));
            if (parseInt(kol.value) == 1) {
                button1.type = "submit";
                button2.type = "submit";
            }
            if (parseInt(kol.value) > 0) kol.value = String(parseInt(getSavedValue(count)) - 1);
            else if (parseInt(kol.value) == 0) {
                button1.type = "button";
                button2.type = "button";
            }
        }

        function saveValue(name) {
            var e = document.getElementById(String(name));
            var id = e.id;
            var val = e.value;
            localStorage.setItem(id, val);
        }
        function getSavedValue(v) {
            if (localStorage.getItem(v) === null) {
                return "0";
            }
            return localStorage.getItem(v);
        }
    </script>
}