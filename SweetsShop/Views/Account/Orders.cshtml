@model IEnumerable<SweetsShop.Models.Client.FullOrder>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Заказы за всё время</h2>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Номер заказа
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Сумма
                </th>
                <th>
                    Адрес
                </th>
                <th>
                    Дата заказа
                </th>
                <th>
                    Комментарий к заказу
                </th>
                <th>Просмотреть товары</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="10%">@obj.Phone</td>
                    <td width="10%">@obj.Sum</td>
                    <td width="30%">@obj.Address</td>
                    <td width="20%">@obj.DateOrder</td>
                    <td width="20%">@obj.Comment</td>
                    <td>
                        <a asp-controller="Account" asp-route-products="@obj.Products" asp-action="Details" class="btn btn-primary mx-2">
                            Просмотреть товары
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>