@using System.Linq
@model IEnumerable<SweetsShop.Models.Client.FullOrder>

<div class="container p-3">
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Номер заказа
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Сумма
                </th>
                <th>
                    Адрес
                </th>
                <th>
                    Дата заказа
                </th>
                <th>
                    Комментарий к заказу
                </th>
                <th>Просмотреть товары</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="10%">@obj.Phone</td>
                    <td width="10%">@obj.Sum</td>
                    <td width="30%">@obj.Address</td>
                    <td width="20%">@obj.DateOrder</td>
                    <td width="20%">@obj.Comment</td>
                    <td>
                        <a asp-controller="Account" asp-route-returnUrl="@Url.Action()" asp-route-products="@obj.Products" asp-action="Details" class="btn btn-primary mx-2">
                            Просмотреть товары
                        </a>
                    </td>
                    <td class="text-center">
                        <div class="justify-content-center btn-group" role="group">
                            <a asp-controller="Admin" asp-route-id="@obj.Id" asp-action="EditOrder" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Admin" asp-route-id="@obj.Id" asp-action="Delete" style="margin-left: 10px;" class="btn btn-danger">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>